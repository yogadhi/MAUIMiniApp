<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MAUIMiniApp.ViewModels"
             xmlns:control="clr-namespace:YAP.Libs.Views;assembly=YAP.Libs"
             xmlns:pinview="clr-namespace:YAP.Libs;assembly=YAP.Libs"
             x:Class="MAUIMiniApp.Views.OTPPage"
             Shell.NavBarIsVisible="False"
             Title="One-Time Password">
    <ContentPage.BindingContext>
        <vm:OTPViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout BackgroundColor="White">
        <Grid HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Text="{Binding cTimer}" TextColor="Black" FontSize="50"/>
            <control:CircularProgressBar x:Name="circularProgress" Margin="10,10" Grid.Row="0" HeightRequest="200" Thickness="10" ProgressColor="Green" ProgressLeftColor="LightGreen" Progress="40" Size="140" IsVisible="False" IsEnabled="False" />

            <StackLayout Grid.Row="2" Padding="10,10">
                <Label TextColor="Black" Text="Google:yogadhiprananda@gmail.com" FontSize="16" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Start"/>
                <pinview:PINView x:Name="existingPINView"
                                 BoxFocusAnimation="ZoomInOut"
                                 PINValue="{Binding CurrentOTP}"
                                 BoxShape="Squere"
                                 IsPassword="False"
                                 HorizontalOptions="CenterAndExpand"
                                 IsEnabled="False"
                                 PINLength="6"/>
            </StackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>